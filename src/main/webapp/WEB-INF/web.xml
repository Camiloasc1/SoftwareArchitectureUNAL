<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Car Accessories Inc.</display-name>

    <distributable/>

    <security-constraint id="WebAppSecurityConstraint">
        <web-resource-collection>
            <web-resource-name>WebApp</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint id="WebAppUserDataConstraint">
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint id="RESTSecurityConstraint">
        <web-resource-collection>
            <web-resource-name>REST</web-resource-name>
            <url-pattern>/rest/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>CLIENT</role-name>
        </auth-constraint>
        <user-data-constraint id="RESTUserDataConstraint">
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint id="WSSecurityConstraint">
        <web-resource-collection>
            <web-resource-name>WS</web-resource-name>
            <url-pattern>/webservices/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>CLIENT</role-name>
        </auth-constraint>
        <user-data-constraint id="WSUserDataConstraint">
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>

    <security-role>
        <role-name>ADMIN</role-name>
    </security-role>
    <security-role>
        <role-name>WORKER</role-name>
    </security-role>
    <security-role>
        <role-name>SELLER</role-name>
    </security-role>
    <security-role>
        <role-name>CLIENT</role-name>
    </security-role>
</web-app>

<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Car Accessories Inc.</display-name>

    <distributable/>

    <security-constraint id="SecurityConstraint">
        <web-resource-collection>
            <web-resource-name>REST API</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint id="UserDataConstraint">
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <login-config>
        <auth-method>FORM</auth-method>
    </login-config>

    <security-role>
        <role-name>ADMIN</role-name>
    </security-role>
    <security-role>
        <role-name>WORKER</role-name>
    </security-role>
    <security-role>
        <role-name>SELLER</role-name>
    </security-role>
</web-app>
